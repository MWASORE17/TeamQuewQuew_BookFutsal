<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/border"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_marginTop="-10dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:id="@+id/itemreportimg"
                android:src="@drawable/lap1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemreportnamalap"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Nama Lapangan"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/itemreportnamakecamatan"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Kecamatan"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:text="RP."
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/itemreportharga"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-22dp"
                android:layout_marginLeft="30dp"
                android:text="Harga"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/namauser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemesan"/>
            <TextView
                android:id="@+id/itemreportstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>